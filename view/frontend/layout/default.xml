<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="HawkSearch\Proxy\Block\Head\HawkSearchJs"
                   name="hawksearch.head" as="hawksearch.head"
                   template="HawkSearch_Proxy::hawksearch/proxy/head/js.phtml"/>
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block class="HawkSearch\Proxy\Block\Footer" name="hawksearch_proxyfooter"
                   as="hawksearch_proxyfooter" template="HawkSearch_Proxy::hawksearch/proxy/footer.phtml"/>
            <block class="HawkSearch\Proxy\Block\Track\AddToCart"
                   ifconfig="hawksearch_proxy/recs/enabled"
                   name="hawksearch_track_add_to_cart"
                   template="hawksearch/proxy/track/add_to_cart.phtml" />
        </referenceContainer>
    </body>
</page>
